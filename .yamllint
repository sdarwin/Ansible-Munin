---
extends: default
rules:
  line-length:
    max: 400
    level: warning
  # the following is apparently required by ansible-lint
  comments:
    min-spaces-from-content: 1
  comments-indentation: false
  braces:
    max-spaces-inside: 1
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
